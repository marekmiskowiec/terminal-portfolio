---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title || 'Portfolio Terminal'}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="macos-terminal">
      <div class="terminal-header">
        <div class="buttons">
          <span class="close"></span>
          <span class="minimize"></span>
          <span class="maximize"></span>
        </div>
        <div class="terminal-title">Portfolio Terminal</div>
      </div>
      <div class="terminal-body">
        <div id="terminal-content">
          <slot />
        </div>
        <!-- Input field for user commands -->
        <input type="text" class="terminal-input" autofocus placeholder="Type a command...">
      </div>
    </div>

    <!-- Include the JavaScript to handle terminal input -->
    <script src="../scripts/terminal.js"></script>
  </body>
</html>