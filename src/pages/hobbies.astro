---
import TerminalLayout from "../layouts/TerminalLayout.astro";

const hobbies = [
  {
    name: "Hot Wheels Collecting",
    description:
      "I have a collection of over 1000 models and I love creating digital projects related to my collection.",
  },
  {
    name: "Programming",
    description:
      "I enjoy working on various projects, from web development to data analysis, and constantly improving my skills.",
  },
  {
    name: "Gaming",
    description:
      "In my free time, I like to play strategy and simulation games.",
  },
  {
    name: "Gym",
    description:
      "I enjoy staying active by regularly going to the gym. Itâ€™s a great way for me to relieve stress, stay healthy, and push my physical limits.",
  },
];
---

<TerminalLayout title="Hobbies">
  <div class="hobbies-list">
    <h2>My Hobbies</h2>
    {
      hobbies.map((hobby) => (
        <div class="hobby-item">
          <h3>{hobby.name}</h3>
          <p>{hobby.description}</p>
        </div>
      ))
    }
  </div>
</TerminalLayout>

<style>
  .hobbies-list {
    padding-left: 1rem;
  }

  .hobby-item {
    margin-bottom: 1.5rem;
  }

  .hobby-item h3 {
    color: #28c840; /* Zielony kolor terminala */
    font-family: "Monaco", monospace;
  }

  .hobby-item p {
    color: #fff;
    font-family: "Monaco", monospace;
  }
</style>
